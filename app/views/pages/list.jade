extends ../layout
block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 电影名称
            th pv
            th 导演
            th 国家
            th 上映年份
            th 录入时间
            th 查看
            th 更新
            th 删除
        tbody
          each item in movies
            tr(class='item-id-#{item._id}')
              td #{item.title}
              td #{item.pv}
              td #{item.doctor}
              td #{item.country}
              td #{item.year}
              td #{moment(item.meta.updateAt).format('YYYY-MM-DD hh:mm a')}
              td
                a(target='_blank', href='../../movie/#{item._id}') 查看
              td
                a(target='_blank', href='../update/#{item._id}') 修改
              td
                //
                  添加data-id语义信息，为admin.js删除操作click提供id
                button.btn.btn-danger.del(type='button', data-id='#{item._id}') 删除
  script(src='/javascripts/admin.js')